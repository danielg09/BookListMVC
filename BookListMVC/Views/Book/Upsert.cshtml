@model BookListMVC.Models.Book
@{
    ViewData["Title"] = Model.Id != 0 ?"Actualizar Libro" : "Agregar libro";
}

<br />
<h2 class="text-info">@(Model.Id != 0 ? "Actualizar" : "Crear") Libro</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-controller="Book" asp-action="Upsert">
        @*<div class="text-danger" asp-validation-summary="ModelOnly"></div>*@

        @if (Model.Id != 0) { <input type="hidden" asp-for="Id" />}

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" />
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" />
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Actualizar" : "Crear")
                </button>
            </div>
            <div class="col-3">
                <a asp-controller="Book" asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}