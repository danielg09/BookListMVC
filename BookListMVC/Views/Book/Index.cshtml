@model IEnumerable<BookListMVC.Models.Book>

@{
    ViewData["Title"] = "Lista de libros";
}
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>

    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-action="Create">Create New Content</a>
    </div>

    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-action="Upsert">Add(Upsert) Content</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                           Name
                        </th>
                        <th>
                           Author
                        </th>
                        <th>
                           ISBN
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var Book in Model)
                    {
                        <tr>
                            <td>
                                @Book.Name
                            </td>
                            <td>
                                @Book.Author
                            </td>
                            <td>
                                @Book.ISBN
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@Book.Id" class="btn btn-danger btn-sm">Delete</a>
                                <a asp-action="Edit" asp-route-id="@Book.Id" class="btn btn-warning btn-sm text-white">Edit</a>
                                <a asp-action="Upsert" asp-route-id="@Book.Id" class="btn btn-warning btn-sm text-white">Edit(Upsert)</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>
</div>
